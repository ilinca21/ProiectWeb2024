@{
    ViewBag.Title = "PageParteneriateCompanii";
    Layout = "~/Views/Shared/_LayoutCases.cshtml";
}
@model proiect.Models.User.UserLogin
<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parteneri</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        h1 {
            margin-top: 50px;
            font-size: 36px; 
        }

        .image-container {
            display: flex;
            justify-content: space-around;
            align-items: center;
            flex-wrap: wrap;
            margin-top: 20px; 
        }

            .image-container img {
                max-width: 300px; 
                height: auto;
                margin: 10px; 
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
            }

        .description {
            margin-top: 50px; 
            max-width: 600px; 
            margin-left: auto; 
            margin-right: auto; 
            text-align: center; 
            font-size: 18px; 
        }
    </style>
</head>
<body>

    <h1>Parteneri</h1>

    <!-- Descrierea partenerilor -->
    <div class="description">
        <p>Aceștia sunt partenerii noștri de încredere, cu care lucrăm îndeaproape pentru a oferi cele mai bune servicii clienților noștri.</p>
    </div>

    <!-- Containerul pentru imaginile partenerilor -->
    <div class="image-container">
        <img src="~/assets/img/Moldcell.png" alt="Moldcell">
        <img src="~/assets/img/Orange.png" alt="Orange">
        <img src="~/assets/img/Unite.png" alt="Unite">
        <img src="~/assets/img/MTC.png" alt="MTC">
    </div>

</body>
</html>