<div class="d-flex align-items-center justify-content-between">
    <a href="index.html" class="logo d-flex align-items-center">
        <img src="assets/img/insigna.png" alt="">
        <span class="d-none d-lg-block">Salvează o viață</span>
    </a>
    <i class="bi bi-list toggle-sidebar-btn"></i>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleButton = document.querySelector('.toggle-sidebar-btn');
            const sidebar = document.querySelector('.sidebar');

            if (toggleButton && sidebar) {
                toggleButton.addEventListener('click', function () {
                    // Verificați starea curentă a barei laterale
                    const isSidebarVisible = sidebar.classList.contains('active');

                    if (isSidebarVisible) {
                        // Ascunde bara laterală
                        sidebar.classList.remove('active');
                    } else {
                        // Afișează bara laterală
                        sidebar.classList.add('active');
                    }
                });
            }
        });</script>
    <style>
        .sidebar {
            width: 300px;
            height: 100vh;
            background-color: #f0f0f0;
            position: fixed;
            top: 0;
            left: -300px; /* Inițial ascunsă */
            transition: left 0.3s ease;
            overflow-y: auto;
        }

            .sidebar.active {
                left: 0; /* Afișată atunci când clasa "active" este aplicată */
            }
    </style>
</div><!-- End Logo -->

<div class="search-bar">
    <form class="search-form d-flex align-items-center" method="POST" action="#">
        <input type="text" name="query" placeholder="Căutare" title="Introdu un caz">
        <button type="submit" title="Search"><i class="bi bi-search"></i></button>
    </form>
</div><!-- End Search Bar -->

