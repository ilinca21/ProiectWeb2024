<i class="bi bi-list toggle-sidebar-btn"></i>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleButton = document.querySelector('.toggle-sidebar-btn');
        const sidebar = document.querySelector('.sidebar');

        if (toggleButton && sidebar) {
            toggleButton.addEventListener('click', function () {
                // Verificați starea curentă a barei laterale
                const isSidebarVisible = sidebar.classList.contains('active');

                if (isSidebarVisible) {
                    // Ascunde bara laterală
                    sidebar.classList.remove('active');
                } else {
                    // Afișează bara laterală
                    sidebar.classList.add('active');
                }
            });
        }
    });</script>
<style>
    .sidebar {
        width: 300px;
        height: 100vh;
        background-color: #ffffff;
        position: fixed;
        top: 0;
        left: -300px; /* Inițial ascunsă */
        transition: left 0.3s ease;
        overflow-y: auto; /* Permite scroll vertical */
    }

        .sidebar.active {
            left: 0; /* Afișată atunci când clasa "active" este aplicată */
        }
        /* Stiluri pentru elementele din bara laterală */
        .sidebar ul {
            list-style: none;
            padding: 15px 0; /* Adăugăm spațiu deasupra și dedesubtul elementelor din listă */
            margin: 0;
        }

            .sidebar ul li {
                padding: 10px 15px; /* Adăugăm spațiu în jurul textului din fiecare element */
                font-size: 16px;
            }
</style>



