@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutCreateAccount.cshtml";
}
@model proiect.Models.User.UserRegister

<div class="container">

    <section class="section register min-vh-150 d-flex flex-column align-items-center justify-content-center py-1">
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-lg-5 col-md-15 d-flex flex-column align-items-center justify-content-center">

                    <div class="d-flex justify-content-center py-4">
                        <a href="index.html" class="logo d-flex align-items-center w-auto">
                            <img src="~/assets/img/insigna.png" alt="">
                            <span class="d-none d-lg-block">Salvează o Viață</span>
                        </a>
                    </div><!-- End Logo -->

                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Creează un cont</h5>

                            </div>

                            <form class="row g-3 needs-validation" novalidate method="post">
                                @using (Html.BeginForm("CreateAccount", "Register", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="col-12">
                                        <label for="yourName" class="form-label">Nume</label>
                                        @Html.TextBoxFor(UserRegister => UserRegister.Credential, new { @class = "form-control", placeholder = "Email or Phone", maxlength = "10" })
                                        @Html.ValidationMessageFor(UserRegister => UserRegister.Credential, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-12">
                                        <label for="yourPassword" class="form-label">Parola</label>
                                        @Html.PasswordFor(UserRegister => UserRegister.Password, new { @class = "form-control", placeholder = "Password" })
                                        @Html.ValidationMessageFor(UserRegister => UserRegister.Password, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="col-12">
                                        <label for="yourPassword" class="form-label">Confirma parola</label>
                                        @Html.PasswordFor(UserRegister => UserRegister.ConfirmPassword, new { @class = "form-control", placeholder = "Password" })
                                        @Html.ValidationMessageFor(UserRegister => UserRegister.ConfirmPassword, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="col-12">
                                        <div class="form-check">
                                            <input class="form-check-input" name="terms" type="checkbox" value="" id="acceptTerms" required>
                                            <label class="form-check-label" for="acceptTerms">Sunt de acord și accept <a href="#">termeni și condiții</a></label>
                                            <div class="invalid-feedback">You must agree before submitting.</div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-warning text-dark fw-bold w-100" type="submit" style="background-color: #f8c50e; color: black; ">Creează cont</button>
                                    </div>
                                    <div class="col-12">
                                        <p class="small mb-0">Ai deja un cont? <a href="pages-login.html">Autentifică-te</a></p>
                                    </div>
                                }
                                </form>

                        </div>
                    </div>

                    <div class="credits">
                        <!-- All the links in the footer should remain intact. -->
                        <!-- You can delete the links only if you purchased the pro version. -->
                        <!-- Licensing information: https://bootstrapmade.com/license/ -->
                        <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->

                    </div>
                </div>
            </div>
        </div>

    </section>

</div>
<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
