@{
    ViewBag.Title = "CazuriUrgenteAdmin";
    Layout = "~/Views/Shared/_LayoutCazuriUrgente.cshtml";
}

@model proiect.Models.User.UserLogin
<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cazuri Urgente</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            color: #000;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .heading-title {
            text-align: center;
            color: #333;
        }

        .listing-events {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .necessity-item {
            background-color: #fff;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: calc(40% - 10px);
            margin-bottom: 20px;
        }

        .small-item {
            width: calc(33.33% - 10px);
        }

        .item-link {
            display: block;
            text-decoration: none;
            color: #000;
        }

        .item-pattern img {
            width: 100%;
            height: auto;
        }

        .item-content {
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }

        .name {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #000;
        }

        .amount-received {
            font-size: 14px;
            margin-bottom: 10px;
            color: #000;
        }

        .progress {
            background-color: #ddd;
            border-radius: 5px;
            height: 8px;
            overflow: hidden;
        }

        .progress-bar {
            background-color: #ff3c3c;
            height: 100%;
        }

        .data-percent {
            font-size: 12px;
            margin-top: 5px;
        }

        .btn-donate {
            background-color: #ff3c3c;
            color: #fff;
            border: none;
            padding: 8px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-donate:hover {
                background-color: #e60000;
            }

        /* Stiluri pentru formularul de adăugare a unui caz urgent */
        .add-case-form {
            background-color: #fff;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: calc(30% - 10px);
            margin-left: auto;
            margin-bottom: 20px;
        }

            .add-case-form input[type="text"],
            .add-case-form textarea {
                width: calc(100% - 20px);
                margin: 5px 10px;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 5px;
                box-sizing: border-box;
            }

            .add-case-form button {
                background-color: #ff3c3c;
                color: #fff;
                border: none;
                padding: 10px;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
                margin: 10px;
            }

                .add-case-form button:hover {
                    background-color: #e60000;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="heading-title">Cazuri Urgente</h1>

        <div class="listing-events">
            <div class="necessity-item">
                <div class="item-link">
                    <div class="item-pattern">
                        <a href="https://www.caritate.md/donations/din-inima-pentru-mihaela-marjina">
                            <img src="https://www.caritate.md/uploads/282x210/54510-img-2938.jpeg" alt="Din inimă pentru Mihaela Marjina">
                        </a>
                    </div>
                    <a class="item-content">
                        <span class="name" title="Din inimă pentru Mihaela Marjina">Din inimă pentru Mihaela Marjina</span>
                        <div class="amount-received">
                            <span>Suma primită: </span>
                            <strong>7,548 MDL</strong>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" style="width: 16%"></div>
                        </div>
                        <span class="data-percent">16%</span>
                    </a>
                    <button class="btn-delete">Șterge</button>
                </div>
            </div>

            <div class="necessity-item">
                <div class="item-link">
                    <div class="item-pattern">
                        <a href="https://www.caritate.md/donations/din-inima-pentru-alex-rotari">
                            <img src="https://www.caritate.md/uploads/282x210/54378-img-2580.jpeg" alt="Din inimă pentru Alex Rotari">
                        </a>
                    </div>
                    <a class="item-content">
                        <span class="name" title="Din inimă pentru Alex Rotari">Din inimă pentru Alex Rotari</span>
                        <div class="amount-received">
                            <span>Suma primită: </span>
                            <strong>11,267 EUR</strong>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" style="width: 23%"></div>
                        </div>
                        <span class="data-percent">23%</span>
                    </a>
                    <button class="btn-delete">Șterge</button>
                </div>
            </div>

            <div class="necessity-item">
                <div class="item-link">
                    <div class="item-pattern">
                        <a href="https://www.caritate.md/donations/din-inima-pentru-gabriela-si-maxim-sava">
                            <img src="https://www.caritate.md/uploads/282x210/54383-img-2600.jpeg" alt="Din inimă pentru Gabriela și Maxim Sava">
                        </a>
                    </div>
                    <a class="item-content">
                        <span class="name" title="Din inimă pentru Gabriela și Maxim Sava">Din inimă pentru Gabriela și Maxim Sava</span>
                        <div class="amount-received">
                            <span>Suma primită: </span>
                            <strong>1,630 EUR</strong>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" style="width: 3%"></div>
                        </div>
                        <span class="data-percent">3%</span>
                    </a>
                    <button class="btn-delete">Șterge</button>
                </div>
            </div>

            <div class="necessity-item">
                <div class="item-link">
                    <div class="item-pattern">
                        <a href="https://www.caritate.md/donations/din-inima-pentru-irina-nistor">
                            <img src="https://www.caritate.md/uploads/282x210/54373-img-2572.jpeg" alt="Din inimă pentru Irina Nistor">
                        </a>
                    </div>
                    <a class="item-content">
                        <span class="name" title="Din inimă pentru Irina Nistor">Din inimă pentru Irina Nistor</span>
                        <div class="amount-received">
                            <span>Suma primită: </span>
                            <strong>1,230 EUR</strong>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" style="width: 25%"></div>
                        </div>
                        <span class="data-percent">25%</span>
                    </a>
                    <button class="btn-delete">Șterge</button>
                </div>
            </div>

        </div>

        <!-- Formular pentru adăugarea unui caz urgent -->
        <div class="add-case-form">
            <h2>Adaugă un caz urgent</h2>
            <form id="addCaseForm">
                <input type="text" id="newCaseName" placeholder="Numele cazului">
                <input type="text" id="newCaseImage" placeholder="URL-ul imaginii">
                <input type="text" id="newCaseAmount" placeholder="Suma primită">
                <textarea id="newCaseDescription" placeholder="Descriere"></textarea>
                <button type="submit">Adaugă cazul</button>
            </form>
        </div>
    </div>
</body>
</html>

