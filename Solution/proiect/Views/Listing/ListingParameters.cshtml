
@{
    ViewBag.Title = "ListingParameters";
    Layout = "~/Views/Shared/_LayoutCases.cshtml";
}
@model System.Collections.Generic.List<Solution.Domain.Entities.Case.CaseMinimal>
<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cazuri pentru Donare</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            color: #000; 
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .heading-title {
            text-align: center;
            color: #333;
        }

        .listing-events {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .necessity-item {
            background-color: #fff;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        .item-link {
            display: block;
            text-decoration: none;
            color: #000; 
        }

        .item-pattern img {
            width: 100%;
            height: 200px; 
            object-fit: cover; 
        }

        .item-content {
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }

        .name {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #000; 
        }

        .amount-received {
            font-size: 16px;
            margin-bottom: 10px;
            color: #000; 
        }

        .progress {
            background-color: #ddd;
            border-radius: 5px;
            height: 10px;
            overflow: hidden;
        }

        .progress-bar {
            background-color: #ff3c3c;
            height: 100%;
        }

        .data-percent {
            font-size: 14px;
            margin-top: 5px;
        }

        .btn-donate {
            background-color: #ff3c3c;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-donate:hover {
                background-color: #e60000;
            }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="heading-title">Toate cazurile</h1>

        @if (Model == null || !Model.Any())
        {
            <h3>No posts found!</h3>
        }
        @if (Model != null)
        {
            foreach (var caseData in Model)
            {
                <div class="listing-events">
                    <div class="necessity-item">
                        <div class="item-link">
                            <div class="item-pattern">
                                @if (caseData.ImagePath != null)
                                {
                                    <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width:80%; max-height: 900px" src="@Url.Content(caseData.ImagePath)" alt="...">
                                }
                                else
                                {
                                    <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 500px;height: 600px" src="" alt="...">
                                }
                            </div>
                            <a class="item-content">
                                <span class="name" title="title">@caseData.Title</span>
                                <div class="amount-received">
                                    <span>Suma primită: </span>
                                    <strong>@caseData.CollectedSum @caseData.Currency </strong>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" style="width: @caseData.CollectedSum / @caseData.CollectedSum %"></div>
                                </div>
                                <span class="data-percent">(@caseData.CollectedSum/ @caseData.CollectedSum)%</span>
                            </a>
                            <button class="btn-edit">Editeaza</button>
                            <button class="btn-delete">Șterge</button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</body>
</html>
