
@{
    ViewBag.Title = "Donatielunar";
    Layout = "~/Views/Shared/_LayoutDonatieLunar.cshtml";
}
@model proiect.Models.User.UserLogin
<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donatie Lunara</title>
    <style>
        body {
            font-family: "Times New Roman", Times, serif; /* setare font Times New Roman */
            background-color: #c4bdb7; /* culoarea de fundal a paginii întregi */
        }

        .container {
            text-align: center;
        }

        .sum-options {
            text-align: left;
            display: inline-block;
        }

        .square {
            width: 100px;
            height: 100px;
            border: 1px solid black;
            display: inline-block;
            margin: 5px;
            text-align: center;
            line-height: 100px;
            background-color: white; /* culoarea de bază */
        }

            .square.selected {
                background-color: #f8c50e; /* culoarea atunci când este selectat */
            }

        .button {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #f8c50e; /* culoarea galbenă pentru buton */
            color: #000; /* culoarea textului butonului - negru */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-family: "Times New Roman", Times, serif; /* setare font Times New Roman */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Donație Lunară</h1>
        <div class="sum-options">
            <p>Opțiuni de donație lunară:</p>
            <button class="square" value="2">2 USD</button>
            <button class="square" value="3">3 USD</button>
            <button class="square" value="20">20 USD</button>
            <button class="square" value="25">25 USD</button>
            <button class="square" value="30">30 USD</button>
            <button class="square" value="35">35 USD</button>
            <button class="square" value="340">340 USD</button>
            <button class="square" value="500">500 USD</button>
            <button class="square" value="1000">1000 USD</button>
        </div>
        <div class="sum-options">
            <button class="square" value="50">50 USD</button>
            <button class="square" value="100">100 USD</button>
            <button class="square" value="200">200 USD</button>
            <button class="square" value="300">300 USD</button>
            <button class="square" value="400">400 USD</button>
            <button class="square" value="600">600 USD</button>
            <button class="square" value="700">700 USD</button>
            <button class="square" value="800">800 USD</button>
            <button class="square" value="900">900 USD</button>
        </div>
        <button class="button">Înregistrează donația lunară</button>
    </div>

    <script>
        const squares = document.querySelectorAll('.square');

        squares.forEach(square => {
            square.addEventListener('click', () => {
                squares.forEach(sq => sq.classList.remove('selected'));
                square.classList.add('selected');
            });
        });
    </script>
</body>
</html>



